<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jasper.demo.spring.mybatis.dao.UserDao">
	<resultMap id="BaseResultMap" type="com.jasper.demo.spring.mybatis.entity.User">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="birthday" property="birtyday" jdbcType="DATE" />
	</resultMap>
	
	<sql id="Base_Column_List">
		id, name, birthday
	</sql>
	
	<select id="getUserById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from user
		where id = #{id}
	</select>
	
	<insert id="addUser" parameterType="com.jasper.demo.spring.mybatis.entity.User">
		insert into user
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="birtyday != null">
				birtyday,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=INTEGER},
			</if>
			<if test="uname != null">
				#{uname,jdbcType=VARCHAR},
			</if>
			<if test="birtyday != null">
				#{birtyday,jdbcType=DATE},
			</if>
		</trim>
	</insert>
</mapper>
